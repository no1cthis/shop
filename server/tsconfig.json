{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "build",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "removeComments": true,
        "allowJs": true
    },
    "include": ["src/**/*", "*"],
    "ts-node": {
        "esm": true
    }
}